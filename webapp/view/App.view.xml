<mvc:View
    controllerName="project1.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">

    <App id="app">
        <pages>
            <Page class="app-page">
                <mvc:XMLView viewName="project1.view.Toolbar" />
                <content>
                    <List>
                        <StandardListItem
                            title="Make a new appointment"
                            type="Navigation"
                            press="onAppointment" />
                        <StandardListItem
                            title="View your appointments"
                            type="Navigation"
                            press="onMyAppointments" />
                    </List>
                </content>
            </Page>
        </pages>
    </App>

</mvc:View>